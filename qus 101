Q101: Write a Program to take a sorted array(say nums[]) and an integer (say target) as inputs. The elements in the sorted array might be repeated. You need to print the first and last occurrence of the target and print the index of first and last occurrence. Print -1, -1 if the target is not present.

/*
Sample Test Cases:
Input 1:
nums = [5,7,7,8,8,10], target = 8
Output 1:
3,4

Input 2:
 nums = [5,7,7,8,8,10], target = 6
Output 2:
-1,-1

Input 3:
 nums = [5,7,7,8,8,10], target = 10
Output 3:
5,5

*/
#include <iostream>
#include <vector>
int findFirstOccurrence(const std::vector<int>& nums, int target)
{
    int start = 0;
    int end = nums.size() - 1;
    int first = -1;
    while (start <= end) 
    {
        int mid = start + (end - start) / 2;
        if (nums[mid] == target) 
        {
            first = mid;
            end = mid - 1; // Look for an earlier occurrence in the left subarray
        } 
        else if (nums[mid] < target) 
        {
            start = mid + 1;
        } 
        else 
        {
            end = mid - 1;
        }
    }
    return first;
}
int findLastOccurrence(const std::vector<int>& nums, int target) 
{
    int start = 0;
    int end = nums.size() - 1;
    int last = -1;
    while (start <= end) 
    {
        int mid = start + (end - start) / 2;
        if (nums[mid] == target) 
        {
            last = mid;
            start = mid + 1; // Look for a later occurrence in the right subarray
        } 
        else if (nums[mid] < target) 
        {
            start = mid + 1;
        } 
        else 
        {
            end = mid - 1;
        }
    }
    return last;
}
int main() 
{
    std::vector<int> nums1 = {5, 7, 7, 8, 8, 10};
    int target1 = 8;
    int first1 = findFirstOccurrence(nums1, target1);
    int last1 = findLastOccurrence(nums1, target1);
    std::cout << first1 << "," << last1 << std::endl;
    std::vector<int> nums2 = {5, 7, 7, 8, 8, 10};
    int target2 = 6;
    int first2 = findFirstOccurrence(nums2, target2);
    int last2 = findLastOccurrence(nums2, target2);
    std::cout << first2 << "," << last2 << std::endl;
    std::vector<int> nums3 = {5, 7, 7, 8, 8, 10};
    int target3 = 10;
    int first3 = findFirstOccurrence(nums3, target3);
    int last3 = findLastOccurrence(nums3, target3);
    std::cout << first3 << "," << last3 << std::endl;
    return 0;
}