Q94: Find the longest word in a sentence.

/*
Sample Test Cases:
Input 1:
I love programming
Output 1:
programming

*/
#include <stdio.h>
#include <string.h> 
void findLongestWord(const char *sentence) 
{
    int maxLength = 0;
    int currentLength = 0;
    int longestWordStart = 0;
    int currentWordStart = 0;
    for (int i = 0; sentence[i] != '\0'; i++) 
    {
        if (sentence[i] == ' ' || sentence[i + 1] == '\0') 
        {
            if (sentence[i] == ' ') 
            {
                currentLength = i - currentWordStart;
            } 
            else 
            {
                currentLength = i - currentWordStart + 1;
            }
            if (currentLength > maxLength) 
            {
                maxLength = currentLength;
                longestWordStart = currentWordStart;
            }
            currentWordStart = i + 1;
        }
    }
    for (int i = 0; i < maxLength; i++) 
    {
        printf("%c", sentence[longestWordStart + i]);
    }
    printf("\n");
}
int main() 
{
    char sentence[] = "I love programming";
    printf("Input: %s\n", sentence);
    printf("Output: ");
    findLongestWord(sentence);
    char sentence2[] = "The quick brown fox jumps over the lazy dog";
    printf("Input: %s\n", sentence2);
    printf("Output: ");
    findLongestWord(sentence2);
    return 0;
}