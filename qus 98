Q98: Print initials of a name with the surname displayed in full.

/*
Sample Test Cases:
Input 1:
John David Doe
Output 1:
J.D. Doe

*/
#include <stdio.h>
#include <string.h>
#include <ctype.h>
void printInitialsWithSurname(char* name) 
{
    int len = strlen(name);
    int last_space_index = -1;
    for (int i = len - 1; i >= 0; i--) 
    {
        if (name[i] == ' ') {
            last_space_index = i;
            break;
        }
    }
    if (last_space_index == -1) 
    {
        printf("%s\n", name);
        return;
    }
    printf("%c.", toupper(name[0]));
    for (int i = 1; i < last_space_index; i++) 
    {
        if (name[i - 1] == ' ' && name[i] != ' ') 
        {
            printf("%c.", toupper(name[i]));
        }
    }
    printf(" %s\n", name + last_space_index + 1);
}
int main() 
{
    char name1[] = "John David Doe";
    char name2[] = "Peter Parker";
    char name3[] = "Solo Name";
    printf("Input: %s\n", name1);
    printf("Output: ");
    printInitialsWithSurname(name1);
    printf("\nInput: %s\n", name2);
    printf("Output: ");
    printInitialsWithSurname(name2);
    printf("\nInput: %s\n", name3);
    printf("Output: ");
    printInitialsWithSurname(name3);
    return 0;
}