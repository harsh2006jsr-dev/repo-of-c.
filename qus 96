Q96: Reverse each word in a sentence without changing the word order.

/*
Sample Test Cases:
Input 1:
I love coding
Output 1:
I evol gnidoc

*/
#include <stdio.h>
#include <string.h>
void reverse_word(char* start, char* end) 
{
    char temp;
    while (start < end)
     {
        temp = *start;
        *start = *end;
        *end = temp;
        start++;
        end--;
    }
}
void reverse_each_word(char* str) 
{
    char* word_start = str;
    char* temp = str;
    while (*temp) 
    {
        temp++;
        if (*temp == ' ' || *temp == '\0') 
        {
            reverse_word(word_start, temp - 1);
            word_start = temp + 1;
        }
    }
}
int main() 
{
    char sentence[] = "I love coding";
    printf("Original: %s\n", sentence);
    reverse_each_word(sentence);
    printf("Reversed: %s\n", sentence);
    return 0;
}