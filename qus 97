Q97: Print the initials of a name.

/*
Sample Test Cases:
Input 1:
John Doe
Output 1:
J.D.

*/
#include <stdio.h>
#include <string.h>
#include <ctype.h>
void printInitials(char* name) 
{
    if (name == NULL || *name == '\0') 
    {
        return;
    }
    printf("%c.", toupper(name[0]));
    for (int i = 1; name[i] != '\0'; i++) 
    {
        if (name[i] == ' ') 
        {
            if (name[i + 1] != '\0') 
            {
                printf("%c.", toupper(name[i + 1]));
            }
        }
    }
    printf("\n");
}
int main() 
{
    char name1[] = "John Doe";
    char name2[] = "Mary Ann Jane";
    char name3[] = "peter";
    printf("Input: %s\n", name1);
    printf("Output: ");
    printInitials(name1);
    printf("\nInput: %s\n", name2);
    printf("Output: ");
    printInitials(name2); 
    printf("\nInput: %s\n", name3);
    printf("Output: ");
    printInitials(name3); 
    return 0;
}