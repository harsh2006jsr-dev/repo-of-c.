Q99: Change the date format from dd/04/yyyy to dd-Apr-yyyy.

/*
Sample Test Cases:
Input 1:
15/04/2025
Output 1:
15-Apr-2025

*/
#include <stdio.h>
#include <string.h>
const char* getMonthAbbreviation(int month) 
{
    static const char* months[] = 
    {
        "", "Jan", "Feb", "Mar", "Apr", "May", "Jun", 
        "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"
    };
    if (month >= 1 && month <= 12) 
    {
        return months[month];
    }
    return NULL; 
}
void changeDateFormat(const char* date) 
{
    int day, month, year;
    scanf(date, "%d/%d/%d", &day, &month, &year);
    const char* month_abbr = getMonthAbbreviation(month);
    if (month_abbr) 
    {
        printf("%02d-%s-%d\n", day, month_abbr, year);
    } 
    else 
    {
        printf("Invalid date format or month number.\n");
    }
}
int main() 
{
    char date1[] = "15/04/2025";
    char date2[] = "01/12/2024";
    printf("Input: %s\n", date1);
    printf("Output: ");
    changeDateFormat(date1);
    printf("\nInput: %s\n", date2);
    printf("Output: ");
    changeDateFormat(date2);
    return 0;
}