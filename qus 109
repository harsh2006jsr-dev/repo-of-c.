Q109: Write a program to take an integer array arr and an integer k as inputs. Print the maximum sum of all the subarrays of size k.

/*
Sample Test Cases:
Input 1:
arr[100, 200, 300, 400] = , k = 2
Output 1:
700

Input 2:
arr[1, 4, 2, 10, 23, 3, 1, 0, 20] = , k = 4
Output 2:
39

Input 3:
arr[100, 200, 300, 400] = , k = 1
Output 3:
400

*/
#include <stdio.h>
#include <limits.h>
int findMaxSubarraySum(int arr[], int n, int k) 
{
    if (n <= 0 || k <= 0 || k > n) 
    {
        fprintf(stderr, "Error: Invalid input (Array size <= 0, k <= 0, or k > Array size).\n");
        return 0; 
    }
    long long current_sum = 0; 
    for (int i = 0; i < k; i++) 
    {
        current_sum += arr[i];
    }
    long long max_sum = current_sum;
    for (int i = k; i < n; i++) 
    {
        current_sum += arr[i];
        current_sum -= arr[i - k];
        if (current_sum > max_sum) 
        {
            max_sum = current_sum;
        }
    }
    return (int)max_sum; 
}
void printInput(int arr[], int n, int k) 
{
    printf("arr = [");
    for (int i = 0; i < n; i++) 
    {
        printf("%d", arr[i]);
        if (i < n - 1) 
        {
            printf(", ");
        }
    }
    printf("], k = %d\n", k);
}
int main() 
{
    int result;
    int arr1[] = {100, 200, 300, 400};
    int n1 = sizeof(arr1) / sizeof(arr1[0]);
    int k1 = 2;
    printf("Input 1:\n");
    printInput(arr1, n1, k1);
    result = findMaxSubarraySum(arr1, n1, k1);
    printf("Output 1:\n%d\n", result); 
    int arr2[] = {1, 4, 2, 10, 23, 3, 1, 0, 20};
    int n2 = sizeof(arr2) / sizeof(arr2[0]);
    int k2 = 4;
    printf("\nInput 2:\n");
    printInput(arr2, n2, k2);
    result = findMaxSubarraySum(arr2, n2, k2);
    printf("Output 2:\n%d\n", result); 
    int arr3[] = {100, 200, 300, 400};
    int n3 = sizeof(arr3) / sizeof(arr3[0]);
    int k3 = 1;
    printf("\nInput 3:\n");
    printInput(arr3, n3, k3);
    result = findMaxSubarraySum(arr3, n3, k3);
    printf("Output 3:\n%d\n", result);
    return 0;
}