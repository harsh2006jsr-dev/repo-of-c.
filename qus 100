Q100: Print all sub-strings of a string.

/*
Sample Test Cases:
Input 1:
abc
Output 1:
a,ab,abc,b,bc,c

*/
#include <stdio.h>
#include <string.h>
void printAllSubstrings(char* str) 
{
    int n = strlen(str);
    for (int i = 0; i < n; i++) 
    {
        for (int j = i; j < n; j++) 
        {
            for (int k = i; k <= j; k++) 
            {
                printf("%c", str[k]);
            }
            printf(", ");
        }
    }
    printf("\n");
}
int main() 
{
    char str[] = "abc";
    printf("Input: %s\n", str);
    printf("Output: ");
    printAllSubstrings(str);
    return 0;
}