Q92: Find the first repeating lowercase alphabet in a string.

/*
Sample Test Cases:
Input 1:
stress
Output 1:
s

*/
#include <stdio.h>
#include <string.h>
char findFirstRepeatingChar(const char *str) 
    {
    int counts[26] = {0};
    for (int i = 0; str[i] != '\0'; i++) 
    {
        char ch = str[i];
        if (ch >= 'a' && ch <= 'z') 
        {
            int index = ch - 'a';
            counts[index]++;
            if (counts[index] == 2) 
            {
                return ch;
            }
        }
    }
    return '\0';
}
int main() 
{
    char str[] = "stress";
    char result = findFirstRepeatingChar(str);
    if (result != '\0') 
    {
        printf("The first repeating character is: %c\n", result);
    } 
    else 
    {
        printf("No repeating character found.\n");
    }
    return 0;
}